<?php
if ($_POST) {
    $number1 = $_POST['first'];
    $number2 = $_POST['second'];
    $number3 = $_POST['third'];
    $largestNumber = max($number1, $number2, $number3);
    echo "Largest number: " . $largestNumber;
}
